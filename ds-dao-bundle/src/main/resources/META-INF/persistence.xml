<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="spdm" transaction-type="RESOURCE_LOCAL">
		<!-- <provider>org.hibernate.ejb.HibernatePersistence</provider> -->
		<class>eu.aniketos.wp3.impl.SecurityProperty</class>
		<class>eu.aniketos.wp3.impl.AgreementTemplate</class>
		<class>eu.aniketos.wp3.impl.ServiceCentre</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.query.factory_class"
				value="org.hibernate.hql.classic.ClassicQueryTranslatorFactory"/>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
		</properties>

	</persistence-unit>

</persistence>