<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="jpa.students" transaction-type="RESOURCE_LOCAL">
        <class>eu.aniketos.wp3.components.spdm.jpa.model.SecurityProperty</class>
        <class>eu.aniketos.wp3.components.spdm.jpa.model.AgreementTemplate</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

	<properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:students;create=true"/>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>

	</properties>

</persistence-unit>

</persistence>